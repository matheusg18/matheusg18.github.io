---
import FormContainer from '~/components/ui/Form.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';

const inputs = [
  {
    type: 'text',
    name: 'name',
    label: 'Name',
  },
  {
    type: 'email',
    name: 'email',
    label: 'Email',
  },
];

const textarea = {
  label: 'Message',
};
---

<WidgetWrapper id={'contact-form'} containerClass="max-w-7xl mx-auto">
  <div
    class="flex flex-col max-w-xl mx-auto rounded-lg backdrop-blur-sm border border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-900 shadow-sm p-4 sm:p-6 lg:p-8 w-full"
  >
    <FormContainer inputs={inputs} textarea={textarea} />
  </div>
</WidgetWrapper>
